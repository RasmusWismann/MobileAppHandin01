                android:name="android.support.PARENT_ACTIVITY"
                android:value="dk.itu.rwis.apphandin01.BrowseBooksActivity" />
        </activity>
        <activity
            android:name="dk.itu.rwis.apphandin01.BookDetailsActivity"
            android:label="@string/title_activity_book_details"
            android:parentActivityName="dk.itu.rwis.apphandin01.BrowseBooksActivity" >
