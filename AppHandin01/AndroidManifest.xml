        </activity>
        <activity
            android:name="dk.itu.rwis.apphandin01.AddNewBookActivity"
            android:label="@string/title_activity_add_new_book"
            android:parentActivityName="dk.itu.rwis.apphandin01.BrowseBooksActivity" >
